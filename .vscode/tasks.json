{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    // PyPI build and deploy
    {
      // remove previosu bulds
      "label": "PyPIPackage - build",
      "type": "shell",
      "command": "python3 -m build"
    },
    {
      "label": "PyPIPackage - upload",
      "type": "shell",
      "command": "python3 -m twine upload --config-file .pypirc dist/*"
    },
    {
      "label": "UnitTests_RunAll",
      "type": "shell",
      "command": "python3 -m unittest tests/test*.py"
    },
    // Conda - package
    {
      "label": "Conda - pkgBuild",
      "type": "shell",
      "command": "conda build  ./conda.recipe/ --output-folder ./build"
    },
    // {
    //   "label": "Conda - pkgUpload",
    //   "type": "shell",
    //   "command": "anaconda",
    //   "args": ["upload", "./build/noarch/*-py_0.tar.bz2"],
    //   "options": {
    //     "env": {
    //       "ANACONDA_API_TOKEN": "an-e6df2241-ae6f-4470-9f70"
    //     }
    //   }
    // },
    // Conda - dev enviroement
    {
      "label": "CondaEnv - deactivate",
      "type": "shell",
      "command": "conda deactivate"
    },
    {
      "label": "Conda - localEnvCreate",
      "type": "shell",
      "command": "conda env create --prefix ./env --file environment.yml"
    },
    {
      "label": "Conda - localEnvUpdate",
      "type": "shell",
      "command": "conda env update --prefix ./env --file environment.yml --prune"
    },
    {
      "label": "Conda - localEnvExport",
      "type": "shell",
      "command": "conda-env export --prefix ./env --file environmentExport.yml"
    },

    // git
    {
      "label": "Git - create tag",
      "type": "shell",
      "command": "git tag -a v0.0.10 -m \"Verion 0.0.10\""
    },
    {
      "label": "Git - push tags",
      "type": "shell",
      "command": "git push origin --tags"
    },

    // Docusaurus
    {
      "type": "npm",
      "script": "start",
      "path": "website/",
      "problemMatcher": [],
      "label": "Docusaurus - dev"
    },
    {
      "type": "npm",
      "script": "build",
      "path": "website/",
      "problemMatcher": [],
      "label": "Docusaurus - build"
    },
    {
      "type": "npm",
      "script": "serve",
      "path": "website/",
      "problemMatcher": [],
      "label": "Docusaurus - serve"
    },
    {
      "type": "npm",
      "script": "deploy",
      "path": "website/",
      "problemMatcher": [],
      "label": "Docusaurus - deploy"
    }
  ]
}
